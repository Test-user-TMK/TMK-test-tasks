@page "/order/positions/index"
@model TMK_tasks.Pages.Order.Position.Index
@{
    ViewData["Title"] = "Позиции";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-page="./Create" asp-route-id="@Model.ParentOrder.Id" class="btn btn-primary">Добавить позицию</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th scope="col">Номер позиции</th>
                    <th scope="col">
                        <div>
                            <label class="form-label">Поиск</label>
                            <input type="text" class="form-control" id="steelType_search" />
                        </div>Марка стали
                    </th>
                    <th scope="col">
                        <div>
                            <input type="text" class="form-control" id="diameter_search" />
                        </div>Диаметр
                    </th>
                    <th scope="col">
                        <div>
                            <input type="text" class="form-control" id="sideWidth_search" />
                        </div>Стенка
                    </th>
                    <th scope="col">Объем позиции заказа</th>
                    <th scope="col">Единица измерения</th>
                    <th scope="col">Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var position in Model.ParentOrder.Positions)
                {
                    <tr>
                        <th scope="row">@position.Id</th>
                        <td class="steelType">@position.SteelType.Title</td>
                        <td class="diameter">@position.Diameter</td>
                        <td class="sideWidth">@position.SideWidth</td>
                        <td>@position.Volume</td>
                        <td>@position.Unit</td>
                        <td>@position.State.Title</td>
                        <td>
                            <a asp-page="./Update" asp-route-id="@position.Id">Редактировать</a>
                            <a asp-page="./Delete" asp-route-id="@position.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>