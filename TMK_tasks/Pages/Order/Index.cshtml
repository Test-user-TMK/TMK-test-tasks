@page "/order/index"
@model TMK_tasks.Pages.Order.Index
@{
    ViewData["Title"] = "Заказы";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a asp-page="./Create" class="btn btn-primary">Добавить заказ</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-stripped" id="orderTable">
            <thead>
                <tr>
                    <th scope="col">Номер заказа</th>
                    <th scope="col" id="manufacturerColumn">
                        <div>
                            <label for="manufacturer_search" class="form-label">Поиск</label>
                            <input type="text" class="form-control" id="manufacturer_search" />
                        </div>Цех-производитель
                    </th>
                    <th scope="col">Дата начала</th>
                    <th scope="col">Дата окончания</th>
                    <th scope="col">Статус</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.AllOrders)
                {
                    <tr>
                        <th scope="row">@order.Id</th>
                        <td class="manufacturerTitle">@order.Manufacturer.Title</td>
                        <td>@order.DateStart?.ToShortDateString()</td>
                        <td>@order.DateEnd?.ToShortDateString()</td>
                        <td>@order.State.Title</td>
                        <td>
                            <a asp-page="./Update" asp-route-id="@order.Id">Редактировать</a>
                            <a asp-page="./Position/Index" asp-route-id="@order.Id">Позиции</a>
                            <a asp-page="./Delete" asp-route-id="@order.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
